{
  "name": "fes.js",
  "version": "3.0.4",
  "description": "一个好用的前端管理台快速开发框架",
  "preferGlobal": true,
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "pnpm i",
    "dev": "node scripts/build.mjs --watch",
    "build": "node scripts/build.mjs",
    "release": "node scripts/release.mjs",
    "clean": "rm -rf ./node_modules & rm -rf packages/**/node_modules & rm -rf packages/**/.cache",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:build-pages": "BASE=fes.js vitepress build docs",
    "test": "fes test",
    "lint": "eslint -c ./.eslintrc.js --ignore-pattern='templates' --ext .js,.jsx,.vue,.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "license": "MIT",
  "keywords": [
    "管理端",
    "fes",
    "fast",
    "easy",
    "strong"
  ],
  "dependencies": {
    "chalk": "^5.0.1",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.3.6",
    "execa": "^6.1.0",
    "minimist": "^1.2.6",
    "semver": "^7.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@vite-pwa/vitepress": "^0.0.5",
    "@webank/eslint-config-webank": "1.2.7",
    "chokidar": "^3.5.2",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "deepmerge": "^4.2.2",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "vite-plugin-pwa": "^0.14.7",
    "vitepress": "1.0.0-alpha.73",
    "vue": "^3.2.47",
    "yargs-parser": "^21.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts}": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}