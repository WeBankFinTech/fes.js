{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "declaration": true,
        "declarationMap": true,
        "newLine": "lf",
        "noEmitOnError": true,
        "sourceMap": true,
        "skipLibCheck": true
    }
}
