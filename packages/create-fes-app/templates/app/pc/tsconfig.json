{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@@/*": [
        "./src/.fes/*"
      ]
    },
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "build/dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.js",
    ".fes*.js",
    "src/**/*",
    "typings/**/*",
    "config/**/*"
  ],
  "exclude": [
    "build",
    "dist",
    "scripts",
    "webpack",
    "jest",
    "node_modules"
  ]
}
